<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Deepblack"
    android:orientation="vertical">

    <com.yjtc.cbg.yjsapp.Widget.YJSToolBar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:centerTitle="校内"
        android:layout_alignParentTop="true"
        app:leftImageSrc="@mipmap/my_19"
        app:rightImageSrc="@mipmap/my_19"></com.yjtc.cbg.yjsapp.Widget.YJSToolBar>

    <com.cjj.MaterialRefreshLayout
        android:id="@+id/id_chat_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_toolbar"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        </android.support.v7.widget.RecyclerView>


    </com.cjj.MaterialRefreshLayout>

</RelativeLayout>
