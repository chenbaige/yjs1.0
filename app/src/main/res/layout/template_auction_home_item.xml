<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/id_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/myhead" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/id_user_head"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="艺匠说"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="5-3  来自 某某某大学" />

        </LinearLayout>

        <TextView
            android:id="@+id/id_right_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/Lightblack"
            android:drawableRight="@mipmap/my_03"
            android:gravity="center_vertical"
            android:text="120$"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>


    <TextView
        android:id="@+id/id_art_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_head"
        android:padding="6dp"
        android:text="@string/test" />


    <com.w4lle.library.NineGridlayout
        android:id="@+id/id_art_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/id_art_content"
        android:padding="3dp"></com.w4lle.library.NineGridlayout>

       <RelativeLayout
        android:id="@+id/id_center_bottum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_art_image">


        <TextView
            android:id="@+id/id_private_chat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/auction2_07"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/app_name" />


        <TextView
            android:id="@+id/id_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/Lightblack"
            android:drawableRight="@mipmap/auction2_11"
            android:gravity="center_vertical"
            android:text="99+"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/id_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/id_support"
            android:background="@color/Lightblack"
            android:drawableRight="@mipmap/auction2_09"
            android:gravity="center_vertical"
            android:text="99+"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_center_bottum"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id_remind_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_weight="3"
            android:background="@color/green"
            android:padding="8dp"
            android:text="拍卖倒计时：2小时14分钟12秒"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/id_remind_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@color/green"
            android:gravity="center"
            android:padding="8dp"
            android:text="出价"
            android:textColor="@color/white" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_shop">

        <TextView
            android:id="@+id/id_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="包邮   包退" />

        <TextView
            android:id="@+id/id_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="6dp"
            android:text="起拍价：100   加价：10" />

    </RelativeLayout>

</RelativeLayout>
