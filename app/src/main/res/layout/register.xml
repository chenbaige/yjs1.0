<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/background">

    <View
        android:id="@+id/id_register_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="36%"
        app:layout_widthPercent="100%" />

    <com.yjtc.cbg.yjsapp.Widget.ClearEditText
        android:id="@+id/id_register_uname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/register_input_name"
        android:layout_below="@id/id_register_image"
        android:layout_centerHorizontal="true"
        android:background="@color/smallblack"
        android:drawableLeft="@mipmap/register_04"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="90%" />


    <LinearLayout
        android:id="@+id/id_register_sex"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/id_register_uname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/Lightblack"
        android:orientation="horizontal"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="90%">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/register_20" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/sex_selector" />


            </FrameLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@mipmap/register_10" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/sex_selector" />


            </FrameLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@mipmap/register_12" />

        </LinearLayout>

    </LinearLayout>

    <com.yjtc.cbg.yjsapp.Widget.ClearEditText
        android:id="@+id/id_register_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/id_register_sex"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="@string/register_input_password"
        android:background="@color/smallblack"
        android:drawableLeft="@mipmap/register_06"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="90%" />


    <com.yjtc.cbg.yjsapp.Widget.ClearEditText
        android:id="@+id/id_register_password_again"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/id_register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="@string/register_input_repeat_password"
        android:background="@color/smallblack"
        android:drawableLeft="@mipmap/register_06"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="90%" />


    <Button
        android:id="@+id/id_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/id_register_password_again"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/baackground_09"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="90%" />

    <TextView
        android:id="@+id/id_has_acount_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/has_account_login"
        android:textColor="@color/Lightgreen"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />


</android.support.percent.PercentRelativeLayout>
