<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/id_private_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@mipmap/myhead" />


        <TextView
            android:id="@+id/Tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_head"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:text="@string/private_message"
            android:textColor="@color/dimgrey"
            android:textSize="16sp" />

    </RelativeLayout>


    <View
        android:id="@+id/id_line"
        android:layout_below="@id/id_private_message"
        style="@style/hor_line" />

    <RelativeLayout
        android:id="@+id/id_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_line"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_head1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@mipmap/myhead" />


        <TextView
            android:id="@+id/Tv1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_head1"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:text="@string/group"
            android:textColor="@color/dimgrey"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>